{
    "scripts": {
        "build": "webpack --mode=production ",
        "dist": "webpack --mode=development ",
        "wasm": "emcc -O3 -flto -msimd128 --no-entry -o assets/animal.wasm src/wasm.c  -s STANDALONE_WASM -s \"EXPORTED_FUNCTIONS=['_init', '_spawn', '_update', '_getInstancePositions','_getInstanceColors']\"",
        "wasm-dev": "emcc -g --no-entry -o assets/animal.wasm src/wasm.c  -s STANDALONE_WASM -s \"EXPORTED_FUNCTIONS=['_init', '_spawn', '_update', '_getInstancePositions','_getInstanceColors']\"",
        "serve": "webpack serve --https --mode=production --devtool=eval-source-map --static-directory=. ./src/index.js"
    },
    "dependencies": {
        "three": "git+https://github.com/wizgrav/three.js.git#tight-morph-example"
    },
    "browser": "./src/index.js",
    "devDependencies": {
        "copy-webpack-plugin": "^11.0.0",
        "http-serve": "^1.0.1",
        "webpack": "^5.56.0",
        "webpack-cli": "^4.9.1",
        "webpack-dev-server": "^4.7.1"
    }
}
